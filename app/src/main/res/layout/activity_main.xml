<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/zanzara"
                    android:id="@+id/zanzara" android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="410dp"
                    android:background="#00000000"
            />
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/cruciani"
                    android:id="@+id/cruciani" android:scaleType="centerCrop"
                    android:layout_marginTop="250dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                    android:background="#00000000"
                    android:layout_marginRight="20dp"/>
            <TextView
                    android:text="Choose your character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/char_chose"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"/>
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/giannino"
                    android:id="@+id/giannnino" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#00000000"
            />
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/barisoni"
                    android:id="@+id/barisoni" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="250dp"
                    android:background="#00000000"
            />
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/maurodamantova"
                    android:id="@+id/mauro_da_mantova" android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="410dp"
                    android:background="#00000000"
                    android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"/>
            <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="131dp" app:srcCompat="@drawable/parenzo"
                    android:id="@+id/parenzo" android:scaleType="centerCrop"
                    android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                    android:background="#00000000"
                    android:layout_marginRight="20dp"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:id="@+id/white_space"
                    app:layout_constraintTop_toBottomOf="@+id/zanzara" android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>