<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/pagatodaassad"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.123" android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/coglione"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.883" android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
    <TextView
            android:text="PAGATO DA ASSAD"
            android:layout_width="117dp"
            android:textAlignment="center"
            android:layout_height="62dp" android:id="@+id/pagatodaassad_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pagatodaassad"/>
    <TextView
            android:text="LEI E' UN COGLIONE"
            android:layout_width="112dp"
            android:textAlignment="center"
            android:layout_height="53dp" android:id="@+id/coglione_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="260dp"
            android:layout_marginStart="260dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/coglione"/>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/basta"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.883" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
    <TextView
            android:text="BASTA"
            android:layout_width="111dp"
            android:textAlignment="center"
            android:layout_height="35dp" android:id="@+id/basta_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="260dp"
            android:layout_marginStart="260dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/basta"/>
    <TextView
            android:text="David Parenzo"
            android:layout_width="350dp"
            android:textAlignment="center"
            android:textSize="26dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.488"
            android:layout_marginTop="20dp"/>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/staizitto"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.123" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
    <TextView
            android:text="STAI ZITTO"
            android:layout_width="111dp"
            android:textAlignment="center"
            android:layout_height="35dp" android:id="@+id/staizitto_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/staizitto"/>
</androidx.constraintlayout.widget.ConstraintLayout>