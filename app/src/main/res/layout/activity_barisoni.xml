<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout3">
        <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/ebreosconsolato"
                android:scaleType="centerCrop"
                android:layout_marginTop="280dp"
                app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"
                android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"/>
        <TextView
                android:text="EBREO SCONSOLATO"
                android:layout_width="140dp"
                android:textAlignment="center"
                android:layout_height="70dp" android:id="@+id/ebreosconsolato_label"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/ebreosconsolato"/>
        <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/abitocostoso"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
                android:layout_marginTop="280dp"
                app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
        <TextView
                android:text="ABITO COSTOSO"
                android:layout_width="140dp"
                android:textAlignment="center"
                android:layout_height="70dp" android:id="@+id/abitocostoso_label"
                android:textSize="20sp"
                android:layout_marginEnd="34dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="34dp"
                app:layout_constraintTop_toBottomOf="@+id/abitocostoso"/>
        <TextView
                android:text="Sebastiano Barisoni"
                android:layout_width="400dp"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="45dp" android:id="@+id/title"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
        <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/seiunpeso"
                android:scaleType="centerCrop"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"
                android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"/>
        <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/ruolodonna"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent" android:background="@drawable/unpressed"/>
        <TextView
                android:text="UN FURETTO"
                android:layout_width="140dp"
                android:textAlignment="center"
                android:layout_height="70dp" android:id="@+id/smettiladiparlare_label"
                android:textSize="20sp"
                android:layout_marginEnd="34dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="34dp"
                app:layout_constraintTop_toBottomOf="@+id/ruolodonna"/>
        <TextView
                android:text="SEMINERIO"
                android:layout_width="140dp"
                android:textAlignment="center"
                android:layout_height="70dp" android:id="@+id/inqualecitta_label"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/seiunpeso"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>